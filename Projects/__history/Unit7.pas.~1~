unit Unit7;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs,Unit8, Vcl.ComCtrls, Vcl.StdCtrls,
  Vcl.FileCtrl;

type
  TForm7 = class(TForm)
    DriveComboBox1: TDriveComboBox;
    DriveComboBox2: TDriveComboBox;
    Memo1: TMemo;
    Memo2: TMemo;
    ProgressBar1: TProgressBar;
    procedure FormCreate(Sender: TObject);
  private
    { Private declarations }
  public
  end;
   TVolumedata= record
  sec:array[0..511] of byte;
  end;

var
  Form7: TForm7;
  thread:TThrCopy;
  F:file of TVolumeData;  //файл для записи содержимого дискеты
  name_exe:string;  //путь к ехе-файлу
implementation

uses unit6;

procedure TForm7.FormCreate(Sender: TObject);
var
result:boolean;
begin
 name_exe:=ExtractFilePath(Application.ExeName);
 AssignFile(F,name_exe+'1.txt');
 result:= SetCurrentDirectory('A:\');
   if not result then
   begin
     DriveComboBox1.Drive:='C' ;
     DriveComboBox2.Drive:='C'  ;
     end
   else
   begin
     DriveComboBox1.Drive:='A';
     DriveComboBox2.Drive:='A';
end;
 Memo1.Clear;
 Memo2.Clear;
 Progressbar1.Position:=0;


 end;

end.
