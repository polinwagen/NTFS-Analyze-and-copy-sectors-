unit тренажер;

interface


uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ComCtrls,
  Vcl.Touch.Keyboard, Vcl.ExtCtrls,StrUtils,MvThr;

type
  TForm6 = class(TForm)
    Button1: TButton;
    TouchKeyboard1: TTouchKeyboard;
    Label1: TLabel;
    Label2: TLabel;
    Button2: TButton;
    Button3: TButton;
    Button4: TButton;
    Label3: TLabel;
    Button5: TButton;
    PaintBox1: TPaintBox;
    Button6: TButton;
    procedure FormKeyDown(Sender: TObject; var Key: Word; Shift: TShiftState);
    procedure FormCreate(Sender: TObject);
    procedure Button5Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);
    procedure PaintBox1Paint(Sender: TObject);
    procedure Button6Click(Sender: TObject);



  private


  public

  end;

var
  Form6: TForm6;

  Ch: word;
  rus:array [1..32] of char;
  latin:array [1..26] of char;
  bf1,bf2,bf3:char;
  Thread1,Thread2,Thread3:TMoveThread;


implementation

{$R *.dfm}

procedure TForm6.Button2Click(Sender: TObject);
begin

bf1:=rus[Random(32)];
bf2:=rus[Random(32)];
bf3:=rus[Random(32)];

if Thread1.Suspended=True then Thread1.Resume;



end;

procedure TForm6.Button5Click(Sender: TObject);
begin
if Form6.CloseQuery then Form6.Close;
end;

procedure TForm6.Button6Click(Sender: TObject);
begin
if Thread1.Suspended=false then THread1.Suspended;
end;

procedure TForm6.FormCreate(Sender: TObject);
begin
  rus[1]:='ф';
  rus[2]:='ы';
  rus[3]:='в';
  rus[4]:='а';
  rus[5]:='п';
  rus[6]:='р';
  rus[7]:='о';
  rus[8]:='л';
  rus[9]:='д';
  rus[10]:='ж';
  rus[11]:='э';
  rus[12]:='й';
  rus[13]:='ц';
  rus[14]:='у';
  rus[15]:='к';
  rus[16]:='е';
  rus[17]:='н';
  rus[18]:='г';
  rus[19]:='ш';
  rus[20]:='щ';
  rus[21]:='з';
  rus[22]:='х';
  rus[23]:='ъ';
  rus[24]:='я';
  rus[25]:='ч';

 Thread1:=TMoveThread.Create(bf1,bf2,bf3,PaintBox1);
 Thread1.Priority:=tpLowest;


end;

procedure TForm6.FormKeyDown(Sender: TObject; var Key: Word;
  Shift: TShiftState);
begin
Ch:=Ord(Key);
end;



procedure TForm6.PaintBox1Paint(Sender: TObject);
begin
PaintBox1.Canvas.Brush.Color := clScrollBar;
PaintBox1.Canvas.FillRect(PaintBox1 .Canvas.ClipRect);
end;



end.
